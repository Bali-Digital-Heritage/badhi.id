<style>
    .logo-small {
        width: 100px;
    }

    .hero.is-fullheight {
        position: relative;
        overflow: hidden;
    }

    .video-container {
        width: 100%;
        height: 100%;
        z-index: 0;
        overflow: hidden;
        margin-top: 2rem;
